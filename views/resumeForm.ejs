        /* Brutalist UI touches */
        :root {
            --brutal-red: #ff2e2e;
            --brutal-blue: #2e2eff;
            --brutal-yellow: #ffcc00;
            --brutal-bg: #f5f5f5;
        }
        
        body {
            font-family: 'Courier New', monospace;
            background-color: var(--brutal-bg);
            line-height: 1.6;
        }
        
        .brutal-border {
            border: 3px solid #000;
            box-shadow: 8px 8px 0 #000;
        }
        
        .brutal-border-thin {
            border: 2px solid #000;
        }
        
        .brutal-btn {
            background: #000;
            color: white;
            padding: 12px 24px;
            border: none;
            cursor: pointer;
            transition: all 0.3s;
            position: relative;
            overflow: hidden;
        }
        
        .brutal-btn:hover {
            transform: translate(-2px, -2px);
            box-shadow: 4px 4px 0 var(--brutal-red);
        }
        
        .brutal-input {
            background: white;
            border: 2px solid #000;
            padding: 10px;
            font-family: 'Courier New', monospace;
        }
        
        .brutal-input:focus {
            outline: none;
            border-color: var(--brutal-blue);
            box-shadow: 0 0 0 2px var(--brutal-blue);
        }
        
        .section-title {
            position: relative;
            display: inline-block;
        }
        
        .section-title:after {
            content: '';
            position: absolute;
            bottom: -5px;
            left: 0;
            width: 100%;
            height: 3px;
            background-color: var(--brutal-red);
        }
        
        /* Adding some brutalist decorative elements */
        .brutal-decoration {
            position: absolute;
            background-color: var(--brutal-yellow);
            z-index: -1;
        }
    </style>
